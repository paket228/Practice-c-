#include <iostream>
using namespace std;
int main() {
    setlocale(0, ""); 
    int number;
    int a = 0;
    int sum = 0;
    cout << "[ ] Введите число: ";
    cin >> number;
    while (number !=0) {
        sum += number;
        a++;
        cout << "[ ] Введите число: ";
        cin >> number;
        
    }
    cout << "[ ] Сумма: " << sum << endl;
    cout << "[ ] Кол-во числе: " << a << endl;
}
