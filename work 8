#include <iostream>
using namespace std;
int main() {
	setlocale(0, "");
	//переводчик на switch
	/*
	Работа с конструкцией множественной выборки switch.
	Написать программу “Переводчик”.
	Программа должна иметь пользовательский интерфейс.
	Главное меню с тремя пунктами : русские, английские слова и выйти.
		Пример :
		[+] Переводчик

		[1] Русские слова
		[2] Английские слова

		[3] Выйти
		Если пользователь выбирает пункт с русскими словами, то программа выводит 15 русских слов, пользователь вводит номер слова из данного списка, дальше программа выводит сообщение с переводом :
	[+] Переводчик “Список русских слов”

		[1] Дом
		[2] Дорога

		[3] Выберите номер слова : 2
		[+] Перевод : дорога->road
		*/
	cout << "ПЕРЕВОДЧИК" << endl << " [1] Русский" << endl << " [2] Англиский" << endl << "" << endl << " [3] Выход" << endl << "" << endl;
	short a;
	cout << "Введите норем пункта: ";
	cin >> a;
	switch (a) {
	case 1:
		cout << " [+] РУССКИЕ СЛОВА" << endl << " [1] Кот" << endl << " [2] Собака" << endl << " [3] Вагонетка" << endl << " [4] Трава" << endl << " [5] Дом" << endl << " [6] Зуб" << endl << " [7] Человек" << endl << " [8] Машина" << endl << " [9] Планета " << endl << " [10] Космос" << endl << " [11] Имя" << endl << " [12] Жизнь" << endl << " [13] Смерть" << endl << " [14] Цикл" << endl << " [15] Смысл" << endl;
		break;
	case 2:
			cout << " [+] АНГЛИСКИЕ СЛОВА" << endl << " [1] Cat" << endl << " [2] Dog" << endl << " [3] trolley" << endl << " [4] Grass" << endl << " [5] Home" << endl << " [6] Tooth" << endl << " [7] Person" << endl << " [8] Car" << endl << " [9] Planet " << endl << " [10] Space" << endl << " [11] Name" << endl << " [12] Life" << endl << " [13] Dead" << endl << " [14] Cycle" << endl << " [15] Meaning" << endl;
			break;
	default:
		exit;
		break;

	}
	short b;
	cout << "Ввидите номер слова: ";
	cin >> b;
	switch (b) {
	case 1:
		cout << "Перевод: Кот --> Cat";
			break;
	case 2:
		cout << "Перевод: Собака--> Dog";
		break;
	case 3:
		cout << "Перевод: Вагонетка --> trolley";
		break;
	case 4:
		cout << "Перевод: Трава --> Grass";
		break;
	case 5:
		cout << "Перевод: Дом--> Home";
		break;
	case 6:
		cout << "Перевод: Зуб --> Tooth";
		break;
	case 7:
		cout << "Перевод: Человек --> Person";
		break;
	case 8:
		cout << "Перевод: Машина --> Car";
		break;
	case 9:
		cout << "Перевод: Планета --> Planet";
		break;
	case 10:
		cout << "Перевод: Космос--> Space";
		break;
	case 11:
		cout << "Перевод: Имя --> Name";
		break;
	case 12:
		cout << "Перевод: Жизнь --> Life";
		break;
	case 13:
		cout << "Перевод: Смерть --> Dead";
		break;
	case 14:
		cout << "Перевод: Цикл --> Cycle";
		break;
	case 15:
		cout << "Перевод: Смысл --> Meaning";
		break;
	}
}
