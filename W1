#include <iostream>
using namespace std;
int main() {
	setlocale(0, "");

	/*
	Сумматор чисел
Пользователь вводит числа по одному. Программа должна суммировать их. Цикл должен завершиться, когда пользователь введет 0. После этого вывести полученную сумму.
[ + ] Введите число: 3	 // Вводим первое число

[ + ] Введите число: 10 // Потом второе

[ + ] Введите число: 100 // И так далее, сколько хотим, столько и вводим

[ + ] Введите число: 0 // Если вводим 0, то завершаем суммирование

[ + ] Сумма: 113 // Выводим сумму введенных чисел
Подсказка: Используйте while (число != 0)
	*/
		int a;
		int sum = 0;
		cout << "-------- СУММАТОР 3000 --------\n";
		cout << "[ + ] Введите: ";
		cin >> a;

		while (a != 0) {
			sum += a;
			cout << "[ + ] Введите: ";
			cin >> a;
		}

		cout << "[ + ] Сумма: " << sum << endl;



		return 0;
	}
