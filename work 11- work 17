#include <iostream>
using namespace std;
int main() {
	setlocale(0, "");
	
	// Переменые 1
	int i = 0;
	int menu;
	int dlina_linii;
	char textura;
	// Переменые 2
	int dlina_kvadrata;
	int shirina_kvadrata;
	int parametr;
	// Переменые 3
	int width, height;
	// Пременые 5
	int size;
	//Меню
	while (true) {
		system("cls");
		cout << "-------------- ГЕОМЕТРИЧЕСКИЕ ФИГУРЫ --------------\n" << endl;
		cout << "[ ] Выбирите пунтк\n";
		cout << "[1] Линия\n";
		cout << "[2] Квадрат\n";
		cout << "[3] Прямоугольник\n";
		cout << "[4] Треугольник\n";
		cout << "[5] Решетка\n";
		cout << "[6] Крестик\n";
		cout << "[7] Плюс\n";
		cout << ">> ";
		cin >> menu;
		if (menu == 1) {
			system("cls");
			cout << "-------------- ПАРАМЕТРЫ ЛИНИИ --------------\n\n";
			cout << "[1] Горизонтальная\n";
			cout << "[2] Вертикальная\n";
			cout << ">> ";
			cin >> parametr;
			if (parametr == 1) {
				system("cls");
				cout << "-------------- ПАРАМЕТРЫ ЛИНИИ --------------\n\n";
				cout << "Длина: ";
				cin >> dlina_linii;
				cout << "Текстура линии: ";
				cin >> textura;

				system("cls");
				while (i < dlina_linii) {
					cout << textura << " ";
					i++;
				}
				break;

			}
			else if (parametr == 2) {
				system("cls");
				cout << "-------------- ПАРАМЕТРЫ ЛИНИИ --------------\n\n";
				cout << "Длина: ";
				cin >> dlina_linii;
				cout << "Текстура линии: ";
				cin >> textura;

				system("cls");
				while (i < dlina_linii) {
					cout << textura << endl;
					i++;
				}
				break;

			}

		}
		else if (menu == 2) {
			system("cls");
			cout << "-------------- ПАРАМЕТРЫ КВАДРАТА --------------\n\n";
			cout << "[1] Заполненый\n";
			cout << "[2] Пустой\n";
			cout << ">> ";
			cin >> parametr;
			if (parametr == 1) {
				system("cls");
				cout << "-------------- ПАРАМЕТРЫ КВАДРАТА --------------\n\n";
				cout << "[ ] Длина квадрата: ";
				cin >> dlina_kvadrata;
				cout << "[ ] Текстура квадрата: ";
				cin >> textura;
				system("cls");
				if (parametr == 1) {
					for (int i = 0; i < dlina_kvadrata; i++) {
						for (int j = 0; j < dlina_kvadrata; j++) {
							cout << textura;
							if (j < dlina_kvadrata - 1) {
								cout << " ";
							}
						}
						cout << endl;

					}
					int o;
					cin >> o;

				}
			}
			else if (parametr == 2) {
				system("cls");
				cout << "-------------- ПАРАМЕТРЫ КВАДРАТА --------------\n\n";
				cout << "[ ] Длина квадрата: ";
				cin >> dlina_kvadrata;
				cout << "[ ] Текстура квадрата: ";
				cin >> textura;
				system("cls");
				for (int i = 0; i < dlina_kvadrata; i++) {
					for (int j = 0; j < dlina_kvadrata; j++) {
						if (i == 0 || i == dlina_kvadrata - 1 || j == 0 || j == dlina_kvadrata - 1) {
							cout << textura << " ";
						}
						else {
							cout << "  ";
						}
					}
					cout << endl;
				}
			}
			cin.ignore();
			cin.get();
		}
		else if (menu == 3) {
			system("cls");
			cout << "-------------- ПАРАМЕТРЫ ПРЯМОУГОЛЬНИКА --------------\n";
			cout << "[1] Заполненный\n";
			cout << "[2] Пустой\n";
			cout << ">> ";
			cin >> parametr;
			if (parametr == 1) {
				system("cls");
				cout << "[ ] Ширина: ";
				cin >> width;
				cout << "[ ] Высота: ";
				cin >> height;
				cout << "[ ] Текстура: ";
				cin >> textura;

				cout << endl;
				system("cls");
				for (int i = 0; i < height; i++) {
					for (int j = 0; j < width; j++) {
						if (i == 0 || i == height - 1 || j == 0 || j == width - 1) {
							cout << textura << " ";
						}
						else {
							cout << ". ";
						}
					}
					cout << endl;
				}
				cin.ignore();
				cin.get();
			}
		}
		else if (menu == 4) {
			system("cls");
			cout << "-------------- ПРАМЕТРЫ ТРЕУГОЛЬНИКА --------------\n";
			cout << "[ ] Размер: ";
			cin >> height;
			cout << "[ ] Текстура: ";
			cin >> textura;
			system("cls");
			for (int i = 1; i <= height; i++) {
				int spaces_before = height - i;
				int chars = 2 * i - 1;
				for (int j = 0; j < height * 2 - 1; j++) {
					if (j < spaces_before || j >= spaces_before + chars) {
						cout << ". ";
					}
					else {
						cout << textura << " ";
					}
				}
				cout << endl;
			}
			cin.ignore();
			cin.get();
		}
		else if (menu == 5) {
			system("cls");
			cout << "-------------- ПАРАМЕТРЫ РЕШОТКИ --------------\n";
			cout << "[ ] Размер: ";
			cin >> size;
			cout << "[ ] Текстура: ";
			cin >> textura;
			system("cls");
			for (int i = 0; i < size; i++) {
				for (int j = 0; j < size; j++) {
					if ((i + j) % 2 == 0) {
						cout << ". ";
					}
					else {
						cout << textura << " ";
					}
				}
				cout << endl;
			}
			cin.ignore();
			cin.get();
		}
		else if (menu == 6) {
			system("cls");
			cout << "-------------- ПАРАМЕТРЫ КРЕСТИКА --------------\n";
			cout << "[ ] Размер: ";
			cin >> size;
			cout << "[ ] Текстура: ";
			cin >> textura;
			system("cls");
			for (int i = 0; i < size; i++) {
				for (int j = 0; j < size; j++) {

					if (i == j || i + j == size - 1) {
						cout << textura << " ";
					}
					else {
						cout << ". ";
					}
				}
				cout << endl;
			}
			cin.ignore();
			cin.get();
		}
		else if (menu == 7) {
			system("cls");
			cout << "-------------- ПАРАМЕТРЫ ПЛЮСА --------------\n";
			cout << "[ ] Размер: ";
			cin >> size;
			cout << "[ ] Текстура: ";
			cin >> textura;
			system("cls");

			int center = size / 2;
			for (int i = 0; i < size; ++i) {
				for (int j = 0; j < size; ++j) {
					if (  j == center || i == center) {
						cout << " " << textura << " ";
					}
					else {
						cout << " . ";
					}
				}
				cout << endl;
			}
			cin.ignore();
			cin.get();
		}
	}
	
}


