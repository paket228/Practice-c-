#include <iostream>
using namespace std;

int main() {
	setlocale(0, "");
	// Переменые 1
	int i = 0;
	int menu;
	int menu_2;
	int dlina_linii;
	char textura;
	// Переменые 2
	int dlina_kvadrata;
	int shirina_kvadrata;
	int parametr;

	//Меню
	while (true) {
		system("cls");
		cout << "-------------- ГЕОМЕТРИЧЕСКИЕ ФИГУРЫ --------------\n" << endl;
		cout << "[ ] Выбирите пунтк\n";
		cout << "[1] Линия\n";
		cout << "[2] Квадрат\n";
		cout << ">> ";
		cin >> menu;
		if (menu == 1) {
			system("cls");
			cout << "-------------- ПАРАМЕТРЫ ЛИНИИ --------------\n\n";
			cout << "[1] Горизонтальная\n";
			cout << "[2] Вертикальная\n";
			cout << ">> ";
			cin >> menu_2;
			if (menu_2 == 1) {
				system("cls");
				cout << "-------------- ПАРАМЕТРЫ ЛИНИИ --------------\n\n";
				cout << "Длина: ";
				cin >> dlina_linii;
				cout << "Текстура линии: ";
				cin >> textura;

				system("cls");
				while (i < dlina_linii) {
					cout << textura << " ";
					i++;
				}
				break;

			}
			else if (menu_2 == 2) {
				system("cls");
				cout << "-------------- ПАРАМЕТРЫ ЛИНИИ --------------\n\n";
				cout << "Длина: ";
				cin >> dlina_linii;
				cout << "Текстура линии: ";
				cin >> textura;

				system("cls");
				while (i < dlina_linii) {
					cout << textura << endl;
					i++;
				}
				break;

			}

		}
		else if (menu == 2) {
			system("cls");
			cout << "-------------- ПАРАМЕТРЫ КВАДРАТА --------------\n\n";
			cout << "[1] Заполненый\n";
			cout << "[2] Пустой\n";
			cout << ">> ";
			cin >> parametr;
			if (parametr == 1) {
				system("cls");
				cout << "-------------- ПАРАМЕТРЫ КВАДРАТА --------------\n\n";
				cout << "Длина квадрата: ";
				cin >> dlina_kvadrata;
				//cout << "Ширина квадрта: ";
				//cin >> shirina_kvadrata;
				cout << "Текстура квадрата: ";
				cin >> textura;
				system("cls");
				if (parametr == 1) {
					for (int i = 0; i < dlina_kvadrata; i++) {
						for (int j = 0; j < dlina_kvadrata; j++) {
							cout << textura;
							if (j < dlina_kvadrata - 1) {
								cout << " ";
							}
						}
						cout << endl;
						
					}
				int o;
				cin >> o;

				}
				else if (parametr == 2) {
					cout << "NO";
				}
				else {
					cout << "ПОШЁЛ НАЗАД";
				}
			}
			else {
				cout << "ИДИ НАЗАД";
				cin.ignore();
				cin.get();
			}
		}
	}
}
