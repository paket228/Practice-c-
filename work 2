#include <iostream>
using namespace std;
int main() {
	int a;
	setlocale(0, "");
	cout << "Программа Времена года" << endl << "[1] Лето" << endl << "[2] Осень" << endl << "[3] Зима" << endl << "[4] Весна" << endl;
	cout << "Введите число..." << endl;
	cin >> a;

	if (a == 1) {
		cout << "Возмите крем от загара. " << endl;
	}
	else if (a == 2) {
		cout << "Сейчас осень, следует одеться тепло и взять с собой зонт. " << endl;
	}
	else if (a == 3) {
		cout << "Одеввайтесь теплее, на улице холодно. " << endl;
	}
	else if (a == 4) {
		cout << "Если у вас алергия, возмите лекаства от неё. " << endl;
	}
	else {
		cout << "Ты что ввёл умник?" << endl;
	}
	return 0;

}
