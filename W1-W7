		system("cls");
		int a;
		cout << "[ ] Введите число: ";
		cin >> a;
		cout << "\n[ ] Отсчет:\n";
		while (a >= 1) {
			cout << "[ ] Отсчет " << a << endl;
			a--;
		}

		cout << "\n[ ] Старт!\n";

	}
	else if (menu == 3) {
		system("cls");
		int number;
		int a = 0;
		int sum = 0;
		cout << "[ ] Введите число: ";
		cin >> number;
		while (number != 0) {
			sum += number;
			a++;
			cout << "[ ] Введите число: ";
			cin >> number;

		}
		cout << "[ ] Сумма: " << sum << endl;
		cout << "[ ] Кол-во числе: " << a << endl;
	}
