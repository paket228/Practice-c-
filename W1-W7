		system("cls");
		int number;
		cout << "[ ] Введите число: ";
		cin >> number;
		int count = 0;
		int temp = number;
		while (temp != 0) {
			temp /= 10;
			count++;
		}
		cout << "[ ] Количество цифр: " << count << endl;
	}
	else if (menu == 5) {
		system("cls");
		double a;
		int i = 1;
		cout << "[ ] Введите число: ";
