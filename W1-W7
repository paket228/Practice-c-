		system("cls");
		int a;
		int sum = 0;
		cout << "-------- СУММАТОР 3000 --------\n";
		cout << "[ + ] Введите: ";
		cin >> a;

		while (a != 0) {
			sum += a;
			cout << "[ + ] Введите: ";
			cin >> a;
		}

		cout << "[ + ] Сумма: " << sum << endl;
	}
