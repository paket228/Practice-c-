		while (i < 11) {
			cout << a << " * " << i << " = " << a * i << endl;
			i++;
		}
	}
	else if (menu == 6) {
		system("cls");
		int number;
		int a = 0;
		int sum = 0;
		cout << "[ ] Введите число: ";
		cin >> number;
		while (number != 0) {
			sum += number;
			a++;
			cout << "[ ] Введите число: ";
			cin >> number;
		}
		int n;
		n = sum / a;
		cout << "[ ] Среднее арифметическое: " << n << endl;
	}
	else if (menu == 7) {
		system("cls");
		string pasword = "12345";
		int a = 1;
		while (true) {
			cout << "\nВвидите пароль: ";
