			if (pasword == "12345") {
				cout << "\nДОБРО ПОЖАЛОВАТЬ\n";
				break;
			}
			else if (pasword == "I`mgay") {
				system("cls");
				for (int i = 0; i < 101; i++) {
					cout << "\nПревращием в натура, не двигайся " << i << " %\n";
					

				}
				cout << "\nПОЗДРАВЛЯЕМ ВЫ НАТУРАЛ!\n";
			}
			else {
				"\nНЕВЕРНЫЙ ПАРОЛЬ\n";
			}
		}
